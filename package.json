{
  "name": "evolvx-ai",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:generate": "cd packages/db && pnpm prisma generate",
    "db:push": "cd packages/db && pnpm prisma db push",
    "db:migrate": "cd packages/db && pnpm prisma migrate dev",
    "db:studio": "cd packages/db && pnpm prisma studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
